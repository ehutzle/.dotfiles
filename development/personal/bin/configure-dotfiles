# Install Packer
git clone --depth 1 https://github.com/wbthomason/packer.nvim\
 ~/.local/share/nvim/site/pack/packer/start/packer.nvim

# Clone Dotfiles
git clone https://github.com/ehutzle/.dotfiles

# Reset Directory 
mv .dotfiles/.* ../ && mv .dotfiles/* ../

# Final Notes
echo "To finish configuration, start nvim and execute `:PackerSync`"

